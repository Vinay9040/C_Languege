/*Write a program to convert string into upper case*/


#include <stdio.h>
#include <string.h>

int main() 
{
    char str[100];

    printf("Enter a string: ");
    scanf("%s", str);

    for (int i = 0; str[i] != '\0'; i++) 
    {
        if (str[i] >= 'a' && str[i] <= 'z') 
        {
            str[i] = str[i] - 32;
        }
    }

    printf("Uppercase string: %s\n", str);
    return 0;
}
